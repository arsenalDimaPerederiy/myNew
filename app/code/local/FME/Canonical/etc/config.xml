<config>
    <modules>
        <FME_Canonical>
            <version>0.1.0</version>
        </FME_Canonical>
    </modules>
    <frontend>
        <layout>
            <updates>
                <fme_canonical>
                    <file>canonical.xml</file>
                </fme_canonical>
            </updates>
        </layout>
        
    </frontend> 
    <adminhtml>
        <layout>
            <updates>
                <fme_canonical>
                    <file>canonical.xml</file>
                </fme_canonical>
            </updates>
        </layout>
    </adminhtml>
    <global>
         <models>
        <canonical>
             <class>FME_Canonical_Model</class>
        </canonical>
    </models>
    <resources>
            <canonical_setup>
                <setup>
                    <module>FME_Canonical</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </canonical_setup>
    </resources>
        <events>
            
            <catalog_product_save_after>
                <observers>
                    <canonical>
                            <type>singleton</type>
                        <class>canonical/observer</class>
                        <method>saveCanonicalUrl</method>
                    </canonical>
                </observers>
            </catalog_product_save_after>
        </events> 
        <blocks>
            <fme_canonical>
                <class>FME_Canonical_Block</class>
            </fme_canonical>
        </blocks>
        <helpers>
            <canonical>
                <class>FME_Canonical_Helper</class>
            </canonical>
        </helpers>
        </global>
</config>