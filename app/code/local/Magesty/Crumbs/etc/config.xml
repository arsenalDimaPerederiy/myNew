<config>
    <modules>
        <Magesty_Crumbs>
            <version>1.3.0</version>
        </Magesty_Crumbs>
    </modules>

    <global>
        <blocks>
            <crumbs>
                <class>Magesty_Crumbs_Block</class>
            </crumbs>
        </blocks>
        <helpers>
            <crumbs>
                <class>Magesty_Crumbs_Helper</class>
            </crumbs>
        </helpers>
        <models>
            <crumbs>
                <class>Magesty_Crumbs_Model</class>
            </crumbs>
        </models>
    </global>

    <frontend>
        <translate>
            <modules>
                <Magesty_Crumbs>
                    <files>
                        <default>Magesty_Crumbs.csv</default>
                    </files>
                </Magesty_Crumbs>
            </modules>
        </translate>
        <layout>
            <updates>
                <crumbs>
                    <file>magesty_crumbs.xml</file>
                </crumbs>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <translate>
            <modules>
                <Magesty_Crumbs>
                    <files>
                        <default>Magesty_Crumbs.csv</default>
                    </files>
                </Magesty_Crumbs>
            </modules>
        </translate>
    </adminhtml>

    <default>
        <crumbs>
            <general>
                <enabled>1</enabled>
                <one_path>1</one_path>
                <hide_duplicates>0</hide_duplicates>
            </general>
        </crumbs>
    </default>
</config>