<?php
/**
 * Pager template
 *
 * @see Mage_Page_Block_Html_Pager
 */
?>
<?php if($this->getCollection()->getSize()): ?>

    <?php if($this->getUseContainer()): ?>
    <div class="pager">
    <?php endif ?>

    <?php if($this->getShowAmounts()): ?>
    <p class="amount">
        <?php if($this->getLastPageNum()>1): ?>
            <?php echo $this->__('Items %s to %s of %s total', $this->getFirstNum(), $this->getLastNum(), $this->getTotalNum()) ?>
        <?php else: ?>
            <strong><?php echo $this->__('%s Item(s)', $this->getTotalNum()) ?></strong>
        <?php endif; ?>
    </p>
    <?php endif ?>

    <?php if($this->getShowPerPage()): ?>
    <div class="limiter">
        <label><?php echo $this->__('Show') ?></label>
        <select onchange="setLocation(this.value)">
        <?php foreach ($this->getAvailableLimit() as  $_key=>$_limit): ?>
            <option value="<?php echo $this->getLimitUrl($_key) ?>"<?php if($this->isLimitCurrent($_key)): ?> selected="selected"<?php endif ?>>
                <?php echo $_limit ?>
            </option>
        <?php endforeach; ?>
        </select> <?php echo $this->__('per page') ?>
    </div>
    <?php endif ?>



    <?php if($this->getLastPageNum()>1): ?>
    <div class="pages">

        <ol>


        <?php if (!$this->isFirstPage()): ?>
            <li class="pager-arrows">
		<?php if(Mage::registry('current_category')): ?>
			<?php if($this->getCurrentPage()==2): ?>
				<?php $pagerPrevUrl=Mage::registry('current_category')->getUrl(); ?>
			<?php else: ?>
				<?php $pagerPrevUrl = $this->getPreviousPageUrl(); ?>
			<?php endif; ?>
		<?php else: ?>
			<?php $pagerPrevUrl = $this->getPreviousPageUrl(); ?>
		<?php endif; ?>
                <a rel="prev" class="<?php if ($this->isFirstPage()): ?>previous-disabled<?php endif;?> previous<?php if(!$this->getAnchorTextForPrevious()): ?> i-previous<?php endif;?>" <?php if ($this->isFirstPage()): ?>onclick="return false;"<?php endif;?> href="<?php echo $pagerPrevUrl ?>" title="<?php echo $this->__('Previous') ?>">
                </a>
            </li>
        <?php endif;?><!--esli tek str pervaya-->




        <?php if (($this->getCurrentPage()>2)&&($this->getLastPageNum()>3)): ?>
            <li><a class="first" href="<?php echo $this->getFirstPageUrl() ?>">1</a></li>
            <li class="point">....</li>
        <?php endif;?>


        <?php if ($this->canShowPreviousJump()): ?>
            <li><a  class="previous_jump" title="" href="<?php echo $this->getPreviousJumpUrl() ?>">...</a></li>
        <?php endif;?>




        <?php $_pageNumb=1; ?>
        <?php foreach ($this->getFramePages() as $_page): ?>

            <?php if ($this->isPageCurrent($_page)): ?>
                <li class="current"><?php echo $_page ?></li>
            <?php else: ?>

		<?php if(Mage::registry('current_category')): ?>
			<?php if($_page==1): ?>
				<?php $pagerUrl=Mage::registry('current_category')->getUrl(); ?>
			<?php else: ?>
				<?php $pagerUrl = $this->getPageUrl($_page); ?>
			<?php endif; ?>
		<?php else: ?>
			<?php $pagerUrl = $this->getPageUrl($_page); ?>
		<?php endif; ?>
                <li><a <?php if($_pageNumb == 2): ?>rel="prev"<?php endif;?> <?php if($_pageNumb == 4): ?>rel="next"<?php endif;?> href="<?php echo $pagerUrl ?>"><?php echo $_page ?></a></li>
            <?php endif;?>
            <?php $_pageNumb++; ?>
        <?php endforeach;?>




        <?php if ($this->canShowNextJump()): ?>
            <li><a  class="next_jump" title="" href="<?php echo $this->getNextJumpUrl() ?>">...</a></li>
        <?php endif;?>

        <?php if ($this->canShowLast()): ?>
          <li><a class="last" href="<?php echo $this->getLastPageUrl() ?>"><?php echo $this->getLastPageNum() ?></a></li>
        <?php endif;?>



        <?php if (($this->getCurrentPage()<$this->getLastPageNum()-1)&&($this->getLastPageNum()>3)): ?>
            <li class="point">....</li>
            <li>
                <a class="last" href="<?php echo $this->getLastPageUrl()?>">
                    <?php  echo $this->getLastPageNum()?>
                </a>
            </li>
        <?php endif; ?>

        <?php if (!$this->isLastPage()): ?>
			<li class="pager-arrows">
				<a rel="next" class="<?php if ($this->isLastPage()): ?>next-disabled<?php endif;?> next<?php if(!$this->getAnchorTextForNext()): ?> i-next<?php endif; ?>" <?php if ($this->isLastPage()): ?>onclick="return false;"<?php endif;?> href="<?php echo $this->getNextPageUrl() ?>" title="<?php echo $this->__('Next') ?>">
				</a>
			</li>
		<?php endif; ?>


        
        </ol>

    </div>
    <?php endif; ?>




    <?php if($this->getUseContainer()): ?>
    </div>
    <?php endif ?>

<?php endif ?>
