<?php if($crumbs && is_array($crumbs)): ?>

		<div class="breadcrumbs">
				<?php $bol=1; ?>
				<?php foreach($crumbs as $_crumbName=>$_crumbInfo): ?>	
						
						<div itemscope itemtype="http://data-vocabulary.org/Breadcrumb" class="crumb<?php if($bol): ?>0<?php endif; ?>">
						<?php if(!empty($_crumbInfo['link'])): ?>
							<a itemprop="url" href="<?php echo $_crumbInfo['link'] ?>" title="<?php echo $this->htmlEscape($_crumbInfo['label']) ?>"><span itemprop="title"><?php echo $this->htmlEscape($_crumbInfo['label']) ?></span></a>
						<?php elseif($_crumbInfo['last']): ?>
							<span itemprop="title"><?php echo $this->htmlEscape($_crumbInfo['label']) ?></span>
						<?php else: ?>
							<span itemprop="title"><?php echo $this->htmlEscape($_crumbInfo['label']) ?></span>
						<?php endif; ?>
						<?php if(!$_crumbInfo['last']): ?>
							
						<?php endif; ?>
						</div>
						<?php $bol=0; ?>

				<?php endforeach; ?>

		</div>
		<div class="breadcrumbs-back">
			<a href="javascript: history.go(-1)"><?php echo $this->__('Back'); ?></a>
		</div>
		
<?php endif; ?>

