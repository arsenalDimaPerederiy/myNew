/**
 * Product description template
 *
 * @see Mage_Catalog_Block_Product_View_Description
 */
?>
<?php
    $_helper = $this->helper('catalog/output');
    $_product = $this->getProduct();
?>
<?php $_description = $this->getProduct()->getShortDescription(); ?>
            <?php if ($_product->getDescription() && $_helper->productAttribute($_product, nl2br($_product->getDescription()), 'description')!='-'):?>
                <div class="short-description">
                    
                    <div class="std"><?php echo $_helper->productAttribute($_product, $_product->getDescription(), 'description') ?></div>
                </div>
            <?php endif;?>   
<?php if ($_description): ?>
    <h2><?php echo $this->__('Details') ?></h2>
    <div class="std">
        <?php $desc=$this->helper('catalog/output')->productAttribute($this->getProduct(), nl2br($this->getProduct()->getShortDescription()), 'short_description'); ?>
        <?php if (!empty($desc) && $desc != '-'): ?>
            <span><?php echo $this->__('Consistency:') ?></span>
            <?php echo $desc  ?>
        <?php endif; ?>
        <br/>
        <?php $_madein = $this->getProduct()->getResource()->getAttribute('country_madein')->getFrontend()->getValue($this->getProduct()); ?>
        <?php if (!empty($_madein) && $_madein != '-'): ?>
            <span><?php echo $this->__('Made in:') ?></span>
            <?php echo $_madein  ?>
        <?php endif; ?>
    </div>
<?php endif; ?>
