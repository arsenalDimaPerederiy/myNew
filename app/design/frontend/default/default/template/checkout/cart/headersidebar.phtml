/**
 * Shoping cart sidebar
 *
 * @see Mage_Checkout_Block_Cart_Sidebar
 */

?>
<div class="topcart">
<div class="block block-cart" onclick="window.open('<?php echo $this->getUrl('checkout/cart') ?>','_self');" title="<?php echo $this->__('Cart') ?>">

    <?php $_cartQty = $this->getSummaryCount() ?>
    <div class="block-title">
        <span><?php echo $this->__('My Cart') ?>:</span>
    </div>
    <div class="block-content">
    <?php if ($_cartQty>0): ?>
        <div class="summary">

            <p class="subtotal">
				<a  href="<?php echo $this->getUrl('checkout/cart') ?>">
					<?php echo Mage::helper('checkout')->formatPrice($this->getSubtotal()) ?>
					<?php if ($_cartQty==1): ?>
						(<span><?php echo $this->__('1 item') ?></span>)
					<?php else: ?>
						(<span><?php echo $this->__('%s items', $_cartQty) ?></span>)
					<?php endif ?>
				</a>
			</p>
        </div>
	<?php else: ?>
	<span> <?php echo $this->__('Cart empty') ?></span>
    <?php endif ?>
    </div>

</div>
</div>
