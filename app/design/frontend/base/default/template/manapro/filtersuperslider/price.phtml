        <?php else: ?>
            <li><a class="m-checkbox-unchecked" title="<?php echo $_superHelper->__('From 400 uah') ?>" href="#"
                   onclick="this.className='m-checkbox-checked'; jQuery('#<?php echo $_id ?>-applied .m-from').val('400'); jQuery('#<?php echo $_id ?>-applied .m-to').val('<?php echo $_filter->getHighestPossibleValue() ?>');  jQuery('#<?php echo $_id ?>-applied .m-from').change(); return false;"><?php echo $_superHelper->__('From 400 uah') ?></a>
